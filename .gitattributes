# =====================================
# Linguagens principais do projeto
# =====================================

# Forçar detecção de COBOL, Python e R
*.cob linguist-detectable=true
*.cpy linguist-detectable=true
*.py linguist-detectable=true
*.R  linguist-detectable=true
*.r  linguist-detectable=true

# Excluir Makefile da análise de linguagem
Makefile linguist-detectable=false
Makefile.* linguist-detectable=false
*.mk linguist-detectable=false

# Excluir arquivos C usados pelo runtime do GNUCobol
bin/*.c linguist-detectable=false
bin/*.h linguist-detectable=false

# Excluir arquivos grandes de configuração (não contam como código)
*.in linguist-detectable=false
*.am linguist-detectable=false

# Excluir arquivos minificados e de build
docs/js/*.js linguist-vendored=true

# =====================================
# Configuração de finais de linha
# =====================================

* text=auto eol=lf

# Scripts
*.sh text eol=lf

# COBOL
*.cob text eol=lf
*.cpy text eol=lf

# C/C++
*.c text eol=lf
*.h text eol=lf

# Python
*.py text eol=lf

# R
*.R text eol=lf
*.r text eol=lf

# Dados
*.csv text eol=lf

# Documentação
*.md text eol=lf
*.txt text eol=lf

# =====================================
# Arquivos binários
# =====================================

*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.pdf binary
*.zip binary
*.exe binary
*.dll binary
